<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmation_message"
        android:gravity="start"
        android:textColor="@color/colorPrimaryDark"
        />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/computadoraCliente"
        android:gravity="start"
        android:textColor="@color/colorPrimaryDark"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/computadoraProcesador"
        android:gravity="start"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/computadoraAlmacenamiento"
        android:gravity="start"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/computadoraCargador"
        android:gravity="start"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/computadoraAudifonos"
        android:gravity="start"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/computadoraTotal"
        android:gravity="start"
        android:textColor="@color/colorPrimaryDark"/>


</LinearLayout>